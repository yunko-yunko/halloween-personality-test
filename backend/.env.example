# Feature Flags
# Set to 'true' to enable email authentication and user profiles (advanced mode)
# Set to 'false' for simple mode without authentication
ENABLE_EMAIL_AUTH=false

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend Configuration
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# Database Configuration (Required only when ENABLE_EMAIL_AUTH=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=halloween_test
DB_USER=postgres
DB_PASSWORD=your-password-here

# AWS Configuration (Required only when ENABLE_EMAIL_AUTH=true)
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@your-domain.com
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# JWT Configuration (Required only when ENABLE_EMAIL_AUTH=true)
# Must be at least 32 characters for security
JWT_SECRET=your-jwt-secret-key-min-32-characters-long
JWT_EXPIRES_IN=24h

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
